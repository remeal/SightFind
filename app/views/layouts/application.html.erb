<!DOCTYPE html>
<html>
  <head>
    <title>SightFindProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <% if user_signed_in? %>
  <span><%="hello" %><%= current_user.username %></span>
  <%= link_to "exit", destroy_user_session_path, :method => :delete %>
<% else %>
  <%= link_to "enter", new_user_session_path %> или <%= link_to "register", new_user_registration_path %>
<% end %>
  <body>
    <%= yield %>
  </body>
</html>
